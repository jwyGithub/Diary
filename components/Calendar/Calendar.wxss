._calendar {
	width: 88%;
	margin: 20rpx auto 0;
	box-shadow: 0px 0px 5px 4px #CCCCCC;
	border-radius: 30rpx;
	overflow: hidden;
}

.calendar-header {
	width: 100%;
	height: 200rpx;
	background-image: linear-gradient(to right, #7ca9ff, #fd94ff);
	margin: 0 auto;
	position: relative;
	border-top-left-radius: 30rpx;
	border-top-right-radius: 30rpx;
}

.calendar-header .top {
	display: flex;
	padding: 20rpx 0;
}

.calendar-header .top .top-left,
.calendar-header .top .top-right {
	flex: 1;
	color: #fff
}

.calendar-header .top .top-left {
	padding: 10rpx 0 0 40rpx;
}

.calendar-header .top .top-left .title {
	font-size: 2rem;
	color: #fff;
}

.calendar-header .top .top-right {
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding-top: 35rpx;
}

.calendar-header .top .top-right .top-right-text {
	font-size: .6rem;
	color: #fff;
}

.calendar-header .top .top-right .wether {
	width: 25px;
	height: 25px;
	margin-left: 70rpx;
}
.calendar-header .bottom{
	position: absolute;
	width: 50%;
	height: 1px;
	background: #fff;
	left: 40rpx;
	bottom: 25rpx;
}
._calendar ._container {
	width: 100%;
	margin: 0 auto;
	padding: 20rpx 0;
	box-sizing: border-box;
}

._calendar ._container ._container-header {
	display: flex;
	align-items: center;
	justify-content: space-around;
	margin-bottom: 10rpx;

}

._calendar ._container ._container-header ._left {
	transform: rotate(180deg);
}

._calendar ._container ._container-header ._ponient {
	width: 1.2rem;
	height: 1.2rem;
	display: block;
}

._calendar ._container ._container-content {
	box-sizing: border-box;
	padding: 10rpx 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

._calendar ._container ._container-content ._week {
	width: 100%;
	height: 10%;
	display: flex;
	align-items: center;
	background-image: linear-gradient(to right, #7ca9ff, #fd94ff);
	border-radius: 20rpx;
	padding: 8rpx 0;
	color: #fff;
	font-size: .7rem;
}

._calendar ._container ._container-content ._week ._week-header {
	width: calc(100% / 7);
	text-align: center;
}

._calendar ._container ._container-content ._days {
	width: 100%;
	display: flex;
	align-items: center;
	flex-wrap: wrap;

}

._calendar ._container ._container-content ._days ._day-text {
	width: calc(100% / 7);
	text-align: center;
	padding: 10rpx 0;
	box-sizing: border-box;
}


._calendar ._container ._container-content ._days-date {
	font-size: .8rem;
	color: #000000;
	font-weight: 500;
}

._calendar ._container ._container-content ._days-lunarday {
	font-size: .5rem;
	color: #c0c0c0;
}

._calendar ._container ._container-content ._days .active {
	background-color: #b99cff;
	border-radius: 30rpx;
	color: #fff;
}

._calendar ._container ._container-content ._days .active ._days-date,
._calendar ._container ._container-content ._days .active ._days-lunarday {
	color: #fff !important;
}