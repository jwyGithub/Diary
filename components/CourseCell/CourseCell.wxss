._progress {
	width: 100%;
	height: 100%;
	position: relative;
}

._progress ._progress-item {
	position: relative;
	padding: 0 0 20rpx 10%;
}
._progress ._progress-item ._item-date {
	line-height: 50rpx;
}

._progress ._progress-item::before {
	content: '';
	height: 100%;
	width: 1px;
	position: absolute;
	left: 5%;
	background-color: #cfcfcf;
}

._progress ._progress-item::after {
	content: '';
	width: 10px;
	height: 10px;
	background-color: #969799;
	border-radius: 50%;
	position: absolute;
	left: calc(5% - 5px);
	top: 15rpx;
}

._progress ._progress-item ._item-content ._text {
	line-height: 70rpx;
}