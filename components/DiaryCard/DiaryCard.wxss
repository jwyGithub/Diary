._card {
	background-color: #ffffff;
	border-radius: 10rpx;
	width: 85%;
	margin: 0 auto 30rpx;
	box-shadow: 0px 0px 3px 3px #cccccc;
	border-radius: 20rpx;
	overflow: hidden;
	padding: 30rpx 0 30rpx;
}

._top {
	display: flex;
	align-items: center;
	justify-content: space-around;
}

._bottom {
	width: 80%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin: 30rpx auto 0;
	font-size: .6rem;
	color: #b0b0af;
}

._left {
	display: flex;
	align-items: center;
}
.main_text{
	font-size: 1.7rem;
	line-height: 100%;
	margin-right: 20rpx;
}
.mini_text{
	font-size: .6rem;
	color: #b0b0af;
}

