._sticky-note {
	width: 88%;
	display: flex;
	box-shadow: 0px 0px 3px 3px #cccccc;
	border-radius: 20rpx;
	overflow: hidden;
	margin: 0 auto;
	height: 100%;
}

._sticky-note ._left {
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
	padding: 15rpx 0;
	box-sizing: border-box;
}

._sticky-note ._left ._day {
	font-weight: 700;
	font-size: 1.2rem;
}

._sticky-note ._left ._week {
	font-size: .6rem;
}

._sticky-note ._left ._note {
	font-size: .7rem;
}

._sticky-note ._left ._weather ._img {
	width: 20px;
	height: 20px;
}

._sticky-note ._right {
	flex: 3.4;
	padding: 10rpx;
	background-color: #fafafa;
	height: 263rpx;
}

._sticky-note ._right ._imgs {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
}

._sticky-note ._right ._imgs ._img {
	width: 50%;
	height: 100%;
}