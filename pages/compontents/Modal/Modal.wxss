.modal-content{
  background-color: #fff;
  width: 70%;
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translate(-50%,-50%);
  text-align: center;
  border-radius: 15rpx;
  padding: 30rpx 0;
}
.modal-content > .ipt{
  margin: 50rpx auto;
  width: 80%;
  font-size: 14px;
}
.modal-content > .btns{
  display: flex;
  width: 100%;
}
.modal-content > .btns > .button{
  font-weight: 300;
  padding: 5px 20px;
}