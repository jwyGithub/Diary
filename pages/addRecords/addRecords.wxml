<view style="width:100%;height:100%">
	<van-cell-group>
		<van-field model:value="{{ value }}" label="标题" placeholder="请输入标题" border="{{ true }}" />
		<van-field model:value="{{ msg }}" label="内容" type="textarea" placeholder="请输入内容" border="{{ true }}"
			autosize="{{ {maxHeight: 200, minHeight: 50}  }}" />
	</van-cell-group>
	<view class="btn">
		<van-button type="primary" block round hairline size="small" bind:click="define">确定</van-button>
	</view>
	<van-notify id="van-notify" />
</view>